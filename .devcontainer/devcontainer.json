{
  "image": "dcbr/hass-custom-devcontainer",
  "postCreateCommand": "sudo -E container setup && sudo chown -R vscode:vscode /usr/local/share/nvm",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "forwardPorts": [8123],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,readonly"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "Wscats.search",
        "google.geminicodeassist",
        "kawamataryo.copy-python-dotted-path",
        "github.vscode-github-actions",
        "codezombiech.gitignore",
        "RooVeterinaryInc.roo-cline",
        "streetsidesoftware.code-spell-checker",
        "Anthropic.claude-code",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "njqdev.vscode-python-typehint"
      ]
    }
  },
  "runArgs": ["--env-file", "${localWorkspaceFolder}/test/test.env"]
}
